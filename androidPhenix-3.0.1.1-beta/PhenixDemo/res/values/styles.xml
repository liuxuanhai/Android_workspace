<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--The background of head part.-->
    <style name="head_background">
        <item name="android:background">#333333</item>
    </style>

    <style name="style_textview_title">
        <item name="android:background">#336</item>
        <item name="android:textColor">#EEE</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="style_textview_describe_default">
        <item name="android:background">#DDF</item>
        <item name="android:textColor">#888</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">left</item>
    </style>
    <style name="style_textview_result_default">
        <item name="android:background">#EFE</item>
        <item name="android:textColor">#33E</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_textview_result_red">
        <item name="android:background">#EFE</item>
        <item name="android:textColor">#F66</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>